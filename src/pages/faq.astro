---

import Layout from "../layouts/Layout.astro"

import FaqSection from "../components/FaqSection.astro"
import NewsletterSectionExternalForm from "../components/NewsletterSectionExternalForm.astro"


import faq from "../data/faq.json"

import global_settings from "../data/global_settings.json"
import newsletter from "../data/newsletter.json"

const title = "Frequently Asked Questions (FAQ) | "+global_settings.site_title


const faq_sd = faq.map((item) => {return {"@type":"Question","name":item.question, "acceptedAnswer":{"@type":"Answer", "text":item.answer}};});

console.log(faq_sd);

const structured_data =   {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity":faq_sd
}
console.log(structured_data);


---

<Layout title={ title } global_settings={global_settings} structured_data={structured_data} >

  <FaqSection
    faq={ faq }
    title="Frequently Asked Questions (FAQ)"
  />

  <NewsletterSectionExternalForm newsletter={newsletter}/>
  
</Layout>
